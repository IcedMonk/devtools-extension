{
  "manifest_version": 3,
  "name": "RHF Devtools",
  "version": "0.0.0",
  "description": "React Hook Form DevTools to help debug forms with validation.",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png"
    },
    "default_popup": "popup.html"
  },
  "devtools_page": "index.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}